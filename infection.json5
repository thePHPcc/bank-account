{
    "$schema": "https://raw.githubusercontent.com/infection/infection/0.29.14/resources/schema.json",
    "testFramework":"phpunit",
    "phpUnit": {
        "customPath": "tools/phpunit"
    },
    "source": {
        "directories": [
            "src"
        ]
    },
    "mutators": {
        "@default": true,
        "@regex": {
            "ignore": [
                "example\\framework\\library\\Uuid::ensureIsValidUuid"
            ]
        },
        "CastString": {
            "ignore": [
                "example\\caledonia\\application\\MarketHtmlProjector::project"
            ]
        },
        "DecrementInteger": {
            "ignore": [
                "example\\caledonia\\domain\\Market::create",
                "example\\framework\\event\\ReadEventsStatement::execute"
            ]
        },
        "IncrementInteger": {
            "ignore": [
                "example\\framework\\event\\ReadEventsStatement::execute"
            ]
        },
        "LessThan": {
            "ignore": [
                "example\\caledonia\\domain\\PriceChangedEvent::asString"
            ]
        }
    },
    "minMsi": 100,
    "minCoveredMsi": 100
}
